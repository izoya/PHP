{# @var App\services\Paginator paginator #}
{# @var string $img #}

{% extends 'layouts/main.twig' %}

{% block content %}
  {% include 'includes/paging.twig' %}
<div class="row">
  {% for product in paginator.getItems %}
    <div class="col-6 col-md-4 col-lg-3 d-flex align-items-stretch">
      <div class="card bg-light mb-3">
        <div class="img-wrapper m-1">
          <a href="/product/one?id={{ product.id }}">
          <img src="{{ img ~ product.img }}" class="img-over card-img-top" alt="{{ product.title }}">
          </a>
        </div>
        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><a href="/product/one?id={{ product.id }}">{{ product.title }}</a></h5>
          <p class="card-text flex-grow-1">{{ product.info }}</p>
          <h3>{{ product.price }} &#8381;</h3>
          <div>
            <button @click="addToCart({{ product.id }})" class="btn btn-info my-1">Add to Cart</button>
          </div>
        </div>
      </div>
    </div>
  {% else %}
    <p>Catalog is empty</p>
  {% endfor %}
</div>

{% endblock %}