{# @var array cart #}
{# @var string amount #}
{# @var string error #}
{% set currency =  '&#8381;' %}
{% extends 'layouts/main.twig' %}

{% block content %}
  {% if error is defined %}
    <div class="w-100 mt-3 text-danger">{{ error }}</div>
  {% endif %}
  <div class="row mb-5">
    <!--  FORM-->
    <div class="col-4 ">
      <div class="card">
        <div class="card-body">
          <form method="POST" action="/order/add">
            <div class="form-group">
              <label for="phone">Phone number</label>
              <input type="text" name="phone" class="form-control" placeholder="+7-294-333-33-33"
                     aria-label="fio" aria-describedby="fio" required>
            </div>
            <div class="form-group">
              <label for="address">Shipping Address</label>
              <textarea name="address" class="form-control" id="address" rows="3" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Make order</button>
          </form>
        </div>
      </div>
    </div>
    <!--  DETAILS-->
    <div class="col-8 ">
      <div class="card bg-light">
        <div class="card-header h5">Order summary</div>
        <div class="card-body">
          <h4 class="list-group-item">Total cost: {{ amount }} {{ currency|raw }}</h4>
        </div>
        <div class="card-body mt-2">
          <ul class="list-group n-style">
            {% for item in cart %}
            <li class="my-n4 pl-2">
              {{ item.title }} &ndash; {{ item.count }} x {{ item.price }} {{ currency|raw }}
            </li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>
  </div>
{% endblock %}