{# @var App\services\Paginator paginator #}
{# @var int $pages #}
{# @var int $current #}
{% set total = paginator.getUrls|keys|last %}
<nav class="mb-4">
  <ul class="pagination justify-content-center">

    {% if 1 == paginator.current %}
      <li class="page-item  disabled"><span class="page-link">Previous</span></li>
    {% else %}
      <li class="page-item"><a class="page-link" href="{{ paginator.getPrevUrl }}">Previous</a></li>
    {% endif %}


{% for page, url in paginator.getUrls %}
  {% if page == paginator.current %}
    <li class="page-item active"><span class="page-link">{{ page}}</span></li>
  {% else %}
  <li class="page-item">
    <a class="page-link" href="{{ url }}">{{ page }}</a></li>
  {% endif %}
{% endfor %}

    {% if total == paginator.current %}
      <li class="page-item  disabled"><span class="page-link">Next</span></li>
    {% else %}
      <li class="page-item"><a class="page-link" href="{{ paginator.getNextUrl }}">Next</a></li>
    {% endif %}

  </ul>
</nav>
